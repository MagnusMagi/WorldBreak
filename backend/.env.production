# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=newslocal_prod
DB_USER=newslocal_user
DB_PASSWORD=secure_production_password_here

# JWT Configuration
JWT_SECRET=super_secure_jwt_secret_key_for_production_use_only
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# External APIs
NEWS_API_KEY=your_production_news_api_key_here
NEWS_API_BASE_URL=https://newsapi.org/v2

# Redis Configuration
REDIS_URL=redis://redis:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=https://newslocal.app

# Logging
LOG_LEVEL=warn

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
